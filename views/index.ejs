      <body ng-app="lightangular" ng-controller="mainCtrl">

        <h3><button class="btn btn-sm btn-primary" type="button" ng-click="restart()">restart</button></h3>

        <!-- Modal -->
        <div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="btn btn-default btn-circle pull-right" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i><span class="sr-only">Close</span></button>
                  <h3 class="modal-title" id="myModalLabel">Progress</h3>
                </div>
                <div class="modal-body">
                  
                  <!--progress-->
                  <div id="progress">
                    <div progressbar max="max" value="dynamic" ng-class="(percent_lsj==100) && 'bg-gr' || 'bg-bl'"></div>
                  </div>
                  <!--progress-->

                  <!--progressMsg-->
                  <div id="progressMessageBox" class="">
                    <label id="progressMessage" ng-show="dynamic < max">Progress {{percent_lsj}}%</label>
                    <label id="progressMessage" ng-show="dynamic >= max" >This task is 100% completed.</label>
                    <img src="/images/check1.jpg" id="progressDoneImg" ng-if="(percent_lsj==100)"/>
                  </div>
                  <!--//wprogressMsg-->

                </div>
              </div>
            </div>
          </div><!--//vertical-alignment-helper-->
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="/vendor/angular/angular.min.js"></script>
        <script src="/js/app.min.js"></script>
      </body>
      </html> 